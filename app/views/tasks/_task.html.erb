<div class="panel panel-default">
  <div class="panel-heading">
	  <%= link_to edit_task_path(task) do %>
	    Created <%= time_ago_in_words(task.created_at) %> ago
	  <% end %>

	  <%= link_to '<i class="fa fa-times"></i>'.html_safe, task_path(task), method: :delete, data: {confirm: "Are you sure?"}, class: "pull-right text-danger" %>
  </div>
  <div class="panel-body">
    <%= raw(task.content_html) %>
  </div>
  <div class="panel-footer text-center">
  <% if task.state == "doing" %>
  		<div class="btn-group btn-group-justified" role="group">
			<%= link_to "<i class='fa fa-arrow-left'></i>".html_safe, change_task_path(task, state: "to_do"), method: :put, class: "btn btn-info btn-medium btn-block" %>
			<%= link_to "<i class='fa fa-arrow-right'></i>".html_safe, change_task_path(task, state: "done"), method: :put, class: "btn btn-info btn-medium btn-block" %>
		</div>
	<% elsif task.state == "to_do" %>
		<%= link_to "<i class='fa fa-arrow-right'></i>".html_safe, change_task_path(task, state: "doing"), method: :put, class: "btn btn-info btn-medium btn-block" %>
	<% else %>
		<%= link_to "<i class='fa fa-arrow-left'></i>".html_safe, change_task_path(task, state: "doing"), method: :put, class: "btn btn-info btn-medium btn-block" %>
	<% end %>
  </div>
</div>