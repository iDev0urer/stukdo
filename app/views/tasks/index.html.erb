<div class="container">
    <p id="notice"><%= notice %></p>

    <h1>To Do</h1>

    <table class="table table-striped task_table">
      <thead>
        <tr>
          <th>Tasks</th>
          <th>State</th>
          <th colspan="4"></th>
        </tr>
      </thead>

      <tbody>
        <% @to_do.each do |task| %>
          <tr>
            <td class="task_content"><%= task.content %></td>
            <td><%= task.state %></td>
            <td class="task_show"><%= link_to '<i class="fa fa-picture-o" title="View Task"></i>'.html_safe, task %></td>
            <td class="task_edit"><%= link_to '<i class="fa fa-pencil-square-o" title="Edit Task"></i>'.html_safe, edit_task_path(task) %></td>
            <td class="task_destroy"><%= link_to '<i class="fa fa-times" title="Destroy Task"></i>'.html_safe, task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <td><%= link_to "Mark as Doing", change_task_path(task, state: "doing"), method: :put %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
    
    <h1>Doing</h1>
    
    <table class="table table-striped task_table">
      <thead>
        <tr>
          <th>Tasks</th>
          <th>State</th>
          <th colspan="5"></th>
        </tr>
      </thead>

      <tbody>
        <% @doing.each do |task| %>
          <tr>
            <td class="task_content"><%= task.content %></td>
            <td><%= task.state %></td>
            <td class="task_show"><%= link_to '<i class="fa fa-picture-o" title="View Task"></i>'.html_safe, task %></td>
            <td class="task_edit"><%= link_to '<i class="fa fa-pencil-square-o" title="Edit Task"></i>'.html_safe, edit_task_path(task) %></td>
            <td class="task_destroy"><%= link_to '<i class="fa fa-times" title="Destroy Task"></i>'.html_safe, task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <td><%= link_to "Mark as To Do", change_task_path(task, state: "to_do"), method: :put %></td>
            <td><%= link_to "Mark as Done", change_task_path(task, state: "done"), method: :put %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
    
    <h1>Done</h1>
    
    <table class="table table-striped task_table">
      <thead>
        <tr>
          <th>Tasks</th>
          <th>State</th>
          <th colspan="4"></th>
        </tr>
      </thead>

      <tbody>
        <% @done.each do |task| %>
          <tr>
            <td class="task_content"><%= task.content %></td>
            <td><%= task.state %></td>
            <td class="task_show"><%= link_to '<i class="fa fa-picture-o" title="View Task"></i>'.html_safe, task %></td>
            <td class="task_edit"><%= link_to '<i class="fa fa-pencil-square-o" title="Edit Task"></i>'.html_safe, edit_task_path(task) %></td>
            <td class="task_destroy"><%= link_to '<i class="fa fa-times" title="Destroy Task"></i>'.html_safe, task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <td><%= link_to "Mark as Doing", change_task_path(task, state: "doing"), method: :put %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Task', new_task_path %>
</div>